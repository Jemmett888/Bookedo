<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jemmett.bookedo.AdminHome">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:name="YourInitialFragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="255dp"
        android:layout_height="289dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welcome" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="143dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <Button
            android:id="@+id/btnNewAdmin"
            android:layout_width="185dp"
            android:layout_height="70dp"
            android:text="New Admin" />

        <Button
            android:id="@+id/btnNewBook"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="New Book" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Logout"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="93dp" />

        <Button
            android:id="@+id/btnEditBook"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Edit Books" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>